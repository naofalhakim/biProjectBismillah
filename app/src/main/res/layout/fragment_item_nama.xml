<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="6dp"
    >

    <TextView
        android:id="@+id/txt_nama_bayi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info 1"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorBlack"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/txt_arti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kontent 1"
        android:textColor="@color/colorText"
        android:layout_toRightOf="@id/txt_nama_bayi"
        android:layout_marginLeft="20dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/img_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="L"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/img_info"
        />

    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/img_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_nama_bayi"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
