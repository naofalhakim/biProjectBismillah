<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.projectbidanku.FragmentMenu.RekomendasiNamaFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/label_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nama_bayi"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/txt_nama_bayi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:layout_toRightOf="@id/img_info"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/txt_arti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arti"
                    android:textColor="@color/colorText"
                    android:layout_toRightOf="@id/txt_nama_bayi"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/img_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="Jenis Kelamin"
                    />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/label_keterangan"
                android:id="@+id/recyclre_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="6dp">

            </android.support.v7.widget.RecyclerView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_add_baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
