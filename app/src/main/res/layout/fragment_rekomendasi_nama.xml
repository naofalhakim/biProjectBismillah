<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.projectbidanku.FragmentMenu.RekomendasiNamaFragment">


    <android.support.v7.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/label_keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

                <TextView
                    android:id="@+id/txt_nama_bayi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/txt_arti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arti"
                    android:textColor="@color/colorText"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_toRightOf="@id/txt_nama_bayi"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/img_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="L / P"
                    android:layout_toLeftOf="@id/img_info"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorText"
                    android:textAppearance="?attr/textAppearanceListItem"/>

                <ImageView
                    android:id="@+id/img_info"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_male_baby"
                    android:layout_centerVertical="true"
                    />

                />

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_below="@id/img_info1"
                    >
                </View>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/label_keterangan"
                android:id="@+id/recyclre_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:scrollbars="vertical"
                >

            </android.support.v7.widget.RecyclerView>

            <ProgressBar
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
