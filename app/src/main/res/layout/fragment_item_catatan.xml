<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:padding="8dp"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:backgroundTint="@color/colorWhite">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        
        <ImageView
            android:id="@+id/img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/checklist"
            />

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img1"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:text="Kehamilan ke - 1"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:layout_toRightOf="@id/img1"
            android:id="@+id/txt_tanggal_cekup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Melakukan Cekup : "
            android:textColor="@color/colorText"
            android:layout_below="@id/txt_nama"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/txt_tanggal_hamil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-08-1997"
            android:layout_below="@id/txt_tanggal_cekup"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_toRightOf="@id/img1"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <ImageView
            android:id="@+id/img_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
